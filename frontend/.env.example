# Frontend Environment Variables Example
# Copy this file to .env and update with your values

# API Configuration
# IMPORTANT: Use REACT_APP_BACKEND_URL (standardized variable)
# For local development: http://localhost:8000/api
# For Railway: https://your-backend.railway.app/api
REACT_APP_BACKEND_URL=http://localhost:8000/api

# Application Info
REACT_APP_APP_NAME=Agente de An√°lise de Engenharia
REACT_APP_VERSION=2.0.0

# Development Settings
NODE_ENV=development
PORT=3000
BROWSER=true
FAST_REFRESH=true

# API Endpoints
REACT_APP_CHAT_ENDPOINT=/chat
REACT_APP_PROJECTS_ENDPOINT=/projects
REACT_APP_UPLOAD_ENDPOINT=/upload

# File Upload
REACT_APP_MAX_FILE_SIZE=52428800
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# UI Configuration
REACT_APP_THEME=light
REACT_APP_LANGUAGE=pt-BR
REACT_APP_ENABLE_DARK_MODE=true

# Performance
GENERATE_SOURCEMAP=true
INLINE_RUNTIME_CHUNK=false

# Development Tools
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=info

# PWA Settings
REACT_APP_ENABLE_PWA=false

# Analytics (optional)
# REACT_APP_GA_TRACKING_ID=your-google-analytics-id
# REACT_APP_HOTJAR_ID=your-hotjar-id