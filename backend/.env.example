# Application Settings
APP_NAME="Construction Analysis Agent"
APP_VERSION="2.0.0"
DEBUG=False
ENVIRONMENT=production

# OpenRouter Configuration (Primary LLM Provider)
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Optional: LangSmith for tracing (disabled)
# LANGSMITH_API_KEY=
# LANGCHAIN_TRACING_V2=false
# LANGCHAIN_PROJECT=construction-agent

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/construction_db
REDIS_URL=redis://localhost:6379

# MongoDB Configuration
DB_MONGODB_URL=mongodb://admin:construction2025@localhost:27017/construction_agent?authSource=admin
DB_DATABASE_NAME=construction_agent
MONGODB_URL=mongodb://admin:construction2025@localhost:27017/construction_agent?authSource=admin
MONGODB_DATABASE=construction_agent

# Model Configuration
CHAT_MODEL=x-ai/grok-4-fast
VISION_MODEL=google/gemini-2.5-flash-image-preview
MODEL_TEMPERATURE=0.3
MAX_TOKENS=4096

# Agent Configuration
AGENT_TIMEOUT=120
MAX_ITERATIONS=10
ENABLE_MEMORY=True

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=52428800  # 50MB

# Project Settings
MAX_LOCATIONS=3
QUALITY_THRESHOLD=70
PROGRESS_INTERVAL=7

# Security
SECRET_KEY=your-secret-key-change-in-production
TOKEN_EXPIRE=30

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# Railway Deploy (optional)
RAILWAY_STATIC_URL=
PORT=8000