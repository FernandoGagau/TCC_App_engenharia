# Redis Production Configuration Environment Variables

# Redis Connection
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_secure_password_here
REDIS_MAX_CONNECTIONS=50
REDIS_CONNECTION_TIMEOUT=5
REDIS_SOCKET_TIMEOUT=5
REDIS_RETRY_ON_TIMEOUT=true

# Redis SSL/TLS Configuration
REDIS_SSL=false
REDIS_SSL_CERT_PATH=
REDIS_SSL_CERT_REQS=required

# Redis Sentinel Configuration (High Availability)
REDIS_USE_SENTINEL=false
REDIS_SENTINELS=localhost:26379,localhost:26380,localhost:26381
REDIS_MASTER_NAME=mymaster
REDIS_SENTINEL_PASSWORD=

# Backup Configuration
BACKUP_DIR=/var/backups/redis
RETENTION_DAYS=7
S3_BUCKET=
S3_PREFIX=redis-backups

# Monitoring and Alerting
SLACK_WEBHOOK_URL=
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9121

# Redis Insight (Optional Monitoring UI)
REDIS_INSIGHT_ENABLED=true
REDIS_INSIGHT_PORT=8001